<form method="post" action="/test/answer" id="test_form">

            {{#each answerList.answer}}
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="question_{{../id}}" value="{{id}}">
                    {{answer}}
                </label>
            </div>
            {{/each}}

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
